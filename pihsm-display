import argparse
import serial
import os
import time

import smbus

import pihsm
from pihsm.sign import get_entropy_avail
from pihsm.display import LCD


log = pihsm.configure_logging(__name__)


bus = smbus.SMBus(1)
lcd = LCD(bus)
lcd.lcd_init()

while True:
    avail = get_entropy_avail()
    lines = (
        'Unix Time:'.ljust(20),
        str(int(time.time())).rjust(20),
        'Entropy Available:'.ljust(20),
        str(avail).rjust(20),
    )
    lcd.lcd_text_lines(*lines)
    time.sleep(1)

